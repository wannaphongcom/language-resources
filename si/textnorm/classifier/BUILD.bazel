load("//:thrax.bzl", "grm_regression_test", "thrax_compile_grm")

package(default_visibility = ["//visibility:public"])

base_path = "si/textnorm/classifier/"

[
    grm_regression_test(
        name = test_rules + "_tests",
        far_file = test_rules + ".far",
        far_file_path = base_path,
        test_file = "testdata/" + test_rules + ".tsv",
        test_file_path = base_path,
    )
    for test_rules in [
        "address",
        "cardinal",
        "connector",
        "date",
        "measure",
        "money",
        "ordinal",
        "roman_numeral",
        "time",
        "tokenize_and_classify",
    ]
]

thrax_compile_grm(
    name = "universal_rules",
    deps = ["universal_depot.far"],
)

thrax_compile_grm(
    name = "universal_func",
    deps = [
        "universal_rules.far",
        "universal_rules.grm",
    ],
)

universal_deps = [
    "universal_func.far",
    "universal_func.grm",
    "universal_rules.far",
    "universal_rules.grm",
]

[
    thrax_compile_grm(
        name = rule_name,
        deps = universal_deps,
    )
    for rule_name in [
        "cardinal",
        "date",
        "measure",
        "money",
        "ordinal",
        "sinhala",
        "time",
        "address",
    ]
]

thrax_compile_grm(
    name = "roman_numeral",
    deps = [
        "ordinal.far",
        "ordinal.grm",
    ] + universal_deps,
)

thrax_compile_grm(
    name = "connector",
    deps = [
        "date.grm",
        "date.far",
        "measure.grm",
        "measure.far",
        "money.grm",
        "money.far",
        "time.grm",
        "time.far",
    ] + universal_deps,
)

thrax_compile_grm(
    name = "classify",
    deps = [
        "address.grm",
        "address.far",
        "cardinal.grm",
        "cardinal.far",
        "connector.grm",
        "connector.far",
        "date.grm",
        "date.far",
        "measure.grm",
        "measure.far",
        "money.grm",
        "money.far",
        "ordinal.grm",
        "ordinal.far",
        "roman_numeral.grm",
        "roman_numeral.far",
        "sinhala.grm",
        "sinhala.far",
        "time.grm",
        "time.far",
    ] + universal_deps,
)

thrax_compile_grm(
    name = "tokenize_and_classify",
    deps = [
        "address.grm",
        "address.far",
        "cardinal.grm",
        "cardinal.far",
        "classify.grm",
        "classify.far",
        "connector.grm",
        "connector.far",
        "date.grm",
        "date.far",
        "measure.grm",
        "measure.far",
        "money.grm",
        "money.far",
        "ordinal.grm",
        "ordinal.far",
        "roman_numeral.grm",
        "roman_numeral.far",
        "sinhala.grm",
        "sinhala.far",
        "time.grm",
        "time.far",
    ] + universal_deps,
)
