load("//:thrax.bzl", "grm_regression_test", "thrax_compile_grm")

package(default_visibility = ["//visibility:public"])

base_path = "ne/textnorm/classifier/"

exports_files([
    "devanagari.grm",
])

[
    grm_regression_test(
        name = test_rules + "_tests",
        far_file = test_rules + ".far",
        far_file_path = base_path,
        test_file = "testdata/" + test_rules + ".tsv",
        test_file_path = base_path,
    )
    for test_rules in [
        "connector",
        "date",
        "devanagari",
        "measure",
        "money",
        "ordinal",
        "time",
        "tokenize_and_classify",
    ]
]

thrax_compile_grm(
    name = "universal_rules",
    deps = ["universal_depot.far"],
)

thrax_compile_grm(
    name = "universal_func",
    deps = [
        "universal_rules.far",
        "universal_rules.grm",
    ],
)

universal_deps = [
    "universal_func.far",
    "universal_func.grm",
    "universal_rules.far",
    "universal_rules.grm",
]

[
    thrax_compile_grm(
        name = rule_name,
        deps = universal_deps,
    )
    for rule_name in [
        "devanagari",
        "util",
        "ordinal",
        "time",
    ]
]

thrax_compile_grm(
    name = "date",
    deps = [
        "devanagari.far",
        "devanagari.grm",
    ] + universal_deps,
)

thrax_compile_grm(
    name = "money",
    deps = [
        "devanagari.far",
        "devanagari.grm",
    ] + universal_deps,
)

thrax_compile_grm(
    name = "measure",
    deps = [
        "devanagari.far",
        "devanagari.grm",
        "measure_prefixes_ne.txt",
        "measure_units_abbv.txt",
        "measure_units_ne.txt",
    ] + universal_deps,
)

thrax_compile_grm(
    name = "connector",
    deps = [
        "date.far",
        "date.grm",
        "devanagari.far",
        "devanagari.grm",
        "measure.far",
        "measure.grm",
        "money.far",
        "money.grm",
        "time.far",
        "time.grm",
    ] + universal_deps,
)

thrax_compile_grm(
    name = "classify",
    deps = [
        "connector.far",
        "connector.grm",
        "date.far",
        "date.grm",
        "devanagari.far",
        "devanagari.grm",
        "measure.far",
        "measure.grm",
        "money.far",
        "money.grm",
        "ordinal.far",
        "ordinal.grm",
        "time.far",
        "time.grm",
    ] + universal_deps,
)

thrax_compile_grm(
    name = "tokenize_and_classify",
    deps = [
        "classify.far",
        "classify.grm",
        "connector.far",
        "connector.grm",
        "date.far",
        "date.grm",
        "devanagari.far",
        "devanagari.grm",
        "measure.far",
        "measure.grm",
        "money.far",
        "money.grm",
        "ordinal.far",
        "ordinal.grm",
        "time.far",
        "time.grm",
    ] + universal_deps,
)
